# upgrade brew
tap "homebrew/cask"

# specify arguments for all 'brew install --cask' commands
cask_args appdir: "~/Applications", require_sha: true

# brew 'install'
brew install 'git'
brew install 'gh'
brew install 'vim'
brew install 'python'
brew install 'trash'

